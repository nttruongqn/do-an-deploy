<%extend("../app.ejs")%>
    <%- include('includes/header.ejs') %>
    
    <hr>

    <div class="post-all add-doctor">
        <div class="post-all-title add-doctor">
            <div class="container">
                <ul class="bread-cr">
                    <li><a href="/"><i class="fa-solid fa-house"></i></a></li>
                    <li><a href="/">/</a></li>
                    <li><a href="/all-doctors">Bác sĩ</a></li>
                </ul>
                <div class="post-all-title-container add-doctor">
                    <h4>Bác sĩ</h4>

                </div>
            </div>
        </div>
        <div class="post-all-main add-doctor ">
            <div class="container">
                <div class="post-all-main-container add-doctor">
                    <ul class="post-all-main-list add-doctor" id="doctor-all-main-list">
                      <%doctors.rows.forEach(function(x){%>
             
                        <li class="post-all-main-item add-doctor">
                            <a href="/detail/doctor/<%=x.id%>" class="post-all-main-link add-doctor">
                                <img src="images/users/<%=x.avatar%>" alt="" width="100px"
                                    style="object-fit: contain;  ">
                                <div class="post-all-main-l-desc add-doctor">
                                    <div class="pam-l-d-title add-doctor">
                                        <h3><%=x.name%></h3>
                                    </div>
                                    <div class="doctor-l-main">
                                        <span>Chuyên ngành: <%=x.Doctor_User.Specialization.name%></span> <br>
                                        <div class="e-main">
                                            <span>Công tác: <%=x.Doctor_User.Clinic.name%> </span><br>
                                            <span>Giá Khám: <%=x.Doctor_User.priceTypeData.value%> đ </span>
                                        </div>
                                       
                                    </div>
                                </div>
                            </a>
                        </li>
                        <%})%>
                    </ul>
                </div>
            </div>
        </div>
        <div class="pagination-container">
            <div class="container">
                <nav aria-label="navigation" id="paginationForDoctorClient" data-total="<%= total %>">
                    <ul class="pagination">
                        <li class="page-item disabled li-pre-client">
                            <a class="page-link page-doctor-pre-client add-d-c-s" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo; Trước</span>
                            </a>
                        </li>

                        <li class="page-item ml-3 li-next-client">
                            <a class="page-link page-doctor-next-client  add-d-c-s" href="#" aria-label="Next">
                                <span aria-hidden="true">Tiếp &raquo; </span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
        <%- include('includes/hide.ejs') %>
        <%- include('includes/expand-navbar.ejs') %>
        <%- include('includes/footer.ejs') %>

<% extend("master.ejs") %>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Tạo mới cơ sở y tế</h1>
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-10 mx-auto">
            <form id="formCreateNewClinic" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="name">Tên phòng khám</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Tên phòng khám">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="phone">Số điện thoại</label>
                        <input type="text" class="form-control" id="phone" name="phone" placeholder="Số điện thoại">

                    </div>
                </div>
                <div class="form-group">
                    <label for="address">Địa chỉ</label>
                    <input type="text" class="form-control" id="address" name="address" placeholder="Địa chỉ">
                </div>
                <div class="form-group">
                    <label for="intro-clinic">Mô tả cơ sở y tế</label>
                    <textarea id="intro-clinic" class="form-control"  ></textarea>
                </div>
                <!-- <div class="form-group">
                    <label for="description">Khám và điều trị</label>
                    <textarea id="description" name="description" class="form-control"></textarea>
                </div> -->

                <div class="form-group">
                    <label for="image-clinic">Hình ảnh</label>
                    <input type="file" id="image-clinic" accept="image/*" onchange="loadFileClinic(event)">
                </div>

                <div class="form-group">
                    <img class="img-preview-clinic-create d-none" id="image-preview" style="width:100%">
                </div>

                <button type="button" class="btn btn-primary" id="createNewClinic">Tạo</button>
            </form>
        </div>

    </div>


    <!-- Content Row -->
    <script>
        $(document).ready(function () {
            $("div #collapseUtilities").addClass('show');
            $("div #collapseUtilities").find($("#aManageClinic")).addClass("active");
            $('.supporter-list-posts').removeClass('active');
        })
    </script>
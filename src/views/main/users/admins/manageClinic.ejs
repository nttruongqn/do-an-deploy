<% extend("master.ejs") %>
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quản lý phòng khám</h1>
    <a href="/users/manage/clinic/create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-plus-circle fa-sm text-white-50"></i> Tạo mới</a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách phòng khám</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="tableManageClinic" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên</th>
                    <th>Địa chỉ</th>
                    <th>Thao tác</th>
                </tr>
                </thead>
                <tbody>
                <% clinics.rows.forEach(function(clinic) { %>
                    <tr>
                        <td><%= clinic.id %></td>
                        <td><%= clinic.name %></td>
                        <td><%= clinic.address %></td>
                        <td class="">
                            <a class="info-specific-clinic" data-clinic-id="<%= clinic.id %>" href="#"
                               title="Info"><i class="fas fa-info-circle"></i></a>
                            <a class="edit-specific-clinic" data-clinic-id="<%= clinic.id %>"
                               href="/users/clinic/edit/<%= clinic.id %>"
                               title="Edit"><i class="fas fa-pen-square mx-3"></i></a>
                            <a class="delete-specific-clinic" data-clinic-id="<%= clinic.id %>" href="#" title="Delete"><i
                                        class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
            

            <nav aria-label="navigation" id="paginationForClinic" data-total="<%=total%>">
                <ul class="pagination">
                    <li class="page-item disabled li-pre d">
                        <a class="page-link page-clinic-pre" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo; Trước</span>
                        </a>
                    </li>
            
                    <li class="page-item ml-3 li-next d">
                        <a class="page-link page-clinic-next" href="#" aria-label="Next">
                            <span aria-hidden="true">Tiếp &raquo; </span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<div class="modal fade " tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true"
     id="modalInfoClinic">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Tên phòng khám</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="form-row">
                            <div class="form-group col-7">
                                <label for="name" class="col-form-label text-label">Tên</label>
                                <input type="text" class="form-control" id="name" disabled>
                            </div>
                            <div class="form-group col-5">
                                <label for="phone" class="col-form-label text-label">Số điện thoại</label>
                                <input type="text" class="form-control" id="phone" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="address" class="col-form-label text-label">Địa chỉ</label>
                            <input type="text" class="form-control" id="address" name="address" disabled>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label text-label"> Ảnh :</label>
                            <div id="imageClinic"></div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function() {
        $("div #collapseUtilities").addClass('show');
        $("div #collapseUtilities").find($("#aManageClinic")).addClass("active");
        $(".supporter-list-posts").removeClass("active");
    })
</script>

<% extend("master.ejs") %>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Quản lý kế hoạch của bạn trong tuần</h1>
        <a href="/doctor/manage/schedule/create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-plus-circle fa-sm text-white-50"></i> Thêm kế hoạch khám bệnh</a>
    </div>

    <!-- Content Row -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kế hoạch (3 ngày sắp tới)</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ngày</th>
                            <th>Kế hoạch</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>
                                <%= threeDaySchedules[0] %>
                            </td>
                            <td>
                                <% schedules.forEach(function(x) { %>
                                    <% if(x.date===threeDaySchedules[0] ) { %>
                                        <button id="sch-<%=x.id%>"  data-sche-id="<%=x.id%>" value="<%= x.time %>" class="btn btn-outline-warning mr-3 mt-1 mb-3 class-sche">
                                            <%= x.time %>
                                        </button>
                                        <% } %>
                                            <% }) %>
                            </td>
                            <td rowspan="3"><a  href="" class="delete-sche"  data-sche-id="" title="Delete"><i class="fas fa-trash"></i></a></td>
                        </tr>
                        <tr>
                            <td id="date-picker">
                                <%= threeDaySchedules[1] %>
                            </td>
                            <td>
                                <% schedules.forEach(function(x) { %>
                                    <% if(x.date===threeDaySchedules[1] ) { %>
                                        <button id="sch-<%=x.id%>" data-sche-id="<%=x.id%>" value="<%= x.time %>" class="btn btn-outline-warning mr-3 mt-1 mb-3 class-sche">
                                            <%= x.time %>
                                        </button>
                                        <% } %>
                                            <% }) %>
                            </td>
                           
                        </tr>
                        <tr>
                            <td id="date-picker">
                                <%= threeDaySchedules[2] %>
                            </td>
                            <td>
                                <% schedules.forEach(function(x) { %>
                                    <% if(x.date===threeDaySchedules[2] ) { %>
                                        <button id="sch-<%=x.id%>" data-sche-id="<%=x.id%>" value="<%= x.time %>" class="btn btn-outline-warning mr-3 mt-1 mb-3 class-sche">
                                            <%= x.time %>
                                        </button>
                                        <% } %>
                                            <% }) %>
                            </td>
                            
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Content Row -->
    <script>
        $(document).ready(function () {
            $("#liSchedule").addClass('active');
        })
    </script>
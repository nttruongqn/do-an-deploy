<% extend("master.ejs") %>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Thêm mới bác sĩ</h1>
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-10 mx-auto">
            <form id="formCreateNewDoctor">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="name">Chức vị - Họ Tên</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Chức vị - Họ Tên">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="phone">Số điện thoại</label>
                        <input type="text" class="form-control" id="phone" name="phone" placeholder="Số điện thoại">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="password">Mật khẩu</label>
                        <input type="password" class="form-control" id="password" name="password"
                            placeholder="Mật khẩu">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="clinic">Chọn cơ sở y tế</label>
                        <select id="clinic" class="form-control" name="clinic">
                            <option value="">Lựa chọn phòng khám</option>
                            <% clinics.forEach(function(x) { %>
                                <option value="<%= x.id %>">
                                    <%= x.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="specialization">Chuyên khoa</label>
                        <select id="specialization" class="form-control" name="specialization">
                            <option value="">Lựa chọn chuyên khoa</option>
                            <% specializations.forEach(function(x) { %>
                                <option value="<%= x.id %>">
                                    <%= x.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="price">Giá tiền</label>
                        <select id="price" class="form-control" name="price">
                            <option value="">Lựa chọn giá tiền</option>
                            <% prices.forEach(function(x) { %>
                                <option value="<%= x.keyMap %>">
                                    <%= x.value %> VNĐ
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="province">Tỉnh thành</label>
                        <select id="province" class="form-control" name="province">
                            <option value="">Lựa chọn tỉnh thành</option>
                            <% provinces.forEach(function(x) { %>
                                <option value="<%= x.keyMap %>">
                                    <%= x.value %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="address">Địa chỉ</label>
                    <input type="text" class="form-control" id="address" name="address" placeholder="Địa chỉ">
                </div>
                <!-- <div class="form-group">
                    <label for="intro-d">Giới thiệu</label>
                    <textarea id="description" class="form-control" name="description" placeholder="Nhập mô tả sơ qua về bác sĩ"></textarea>
                </div> -->
                <div class="form-group">
                    <label for="introJobDoctor">Giới thiệu</label>
                    <input type="text" id="introJobDoctor" class="form-control" name="intro-d" placeholder="Nhập mô tả sơ qua về bác sĩ" />
                </div>
                <div class="form-group">
                    <label for="intro-doctor">Mô tả</label>
                    <textarea id="intro-doctor" class="form-control" ></textarea>
                </div>
                <button type="submit" class="btn btn-primary" id="createNewDoctor">Tạo</button>
            </form>
        </div>
    </div>

    <!-- Content Row -->
    <script>
        $(document).ready(function () {
            $("div #featureManage").addClass('show');
            $("div #featureManage").find($("#aManageDoctor")).addClass("active");
        })
    </script>
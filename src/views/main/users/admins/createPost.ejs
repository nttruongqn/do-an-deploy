<% extend("master.ejs") %>
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Thêm mới bài đăng</h1>
</div>
<!-- Content Row -->
<div class="row">
    <div class="col-10 mx-auto">
        <form id="formCreateNewPost">
            <div class="form-group">
                <label for="title-post">Tiêu đề</label>
                <input type="text" class="form-control" id="title-post" name="titlePost" placeholder="Tiêu đề">
            </div>
            <div class="form-group" style="display: none;">
                <label for="address">Bài viết phục vụ:</label>
                <div class="form-row">
                    <div class="form-group col-4" >
                        <select id="forDoctorId" class="form-control" name="forDoctorId">
                            <option value="-1" selected>Không có bác sĩ nào được chọn</option>
                            <% doctors.forEach(function(x) { %>
                                <option value="<%= x.id %>"> <%= x.name %> </option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group col-4">
                        <select id="forClinicId" class="form-control" name="forClinicId">
                            <option value="-1" selected hidden>Không có phòng khám nào được chọn</option>
                            <% clinics.forEach(function(x) { %>
                                <option value="<%= x.id %>"> <%= x.name %> </option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group col-4">
                        <select id="forSpecialization" class="form-control" name="forSpecializationId">
                            <option value="-1" selected hidden>Không có chuyên khoa nào được chọn</option>
                            <% specializations.forEach(function(x) { %>
                                <option value="<%= x.id %>"> <%= x.name %> </option>
                            <% }) %>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="image-post">Hình ảnh</label>
                <input type="file" id="image-post" accept="image/*" onchange="loadFilePost(event)">
            </div>
            <div class="form-group">
                <img class="img-preview-post-create d-none" id="image-preview" width="100%">
            </div>
            <div class="form-group">
                <label for="title-post">Mô tả sơ qua về bài viết</label>
                <textarea type="text" class="form-control" id="title-post" name="desc" placeholder="Mô tả sơ qua bài viết" rows="10"></textarea>
            </div>
            <div class="form-group">
                <label for="contentMarkdownCreate">Nội dung chính bài viết </label>
                <textarea id="contentMarkdownCreate" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label for="mainContentMarkdownCreate">Chi tiết bài viết</label>
                <textarea id="mainContentMarkdownCreate" class="form-control"></textarea>
            </div>
            <button type="button" class="btn btn-primary" id="createNewPost">Tạo</button>
        </form>
    </div>
</div>
